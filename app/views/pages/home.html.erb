<% content_for :meta_title, "BIA" %>
<%= render 'shared/navbar_sticky' %>
<%= render 'shared/banner' %>
<div class="container-bia">
  <!-- Featured User element on landing page -->
  <div class="user-feature-card user-feature-card-large-photo mt-7">
    <!-- Title of featured user in this case spanning 2 columns in the grid -->
    <h2 class="user-feature-card-title">Talik suggests you try some Peruvian ceviche!</h2>
    <!-- Image covering the full 2 row grid-->
    <img class="image-rounded-corners user-feature-card-image-full-height" src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80" alt="">
    <!-- first element introducting the user -->
    <div class="user-feature-card-user">
        <div class="avatar-large" style="background-image: url('https://images.unsplash.com/photo-1544723795-3fb6469f5b39?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=670&q=80')"></div>
       <div class="">
        <h5>Talik Naruma</h5>
        <p class="mt-2">Talik loves Peruvian ceviche and knows the Peruvian cuisine like few others. There is no one quite like him to get recommendations from!</p>
      </div>
    </div>
    <!-- second element containing a recommendation -->
    <div class="user-feature-card-review">
      <h5 class="">Talik’s recommendation:</h5>
      <h5 class="mt-2">Cevicheria in Berlin for modern Peruvian food</h5>
      <p class="mt-2">The place has some of the best ceviche in town – no question! The quality of the fish is outstanding!</p>
    </div>
  </div>
  <div class="user-feature-card user-feature-card-small-photo mt-7">
    <!-- Title of featured user in this case spanning 2 columns in the grid -->
    <h2 class="user-feature-card-title">Smanatha, a connaisseur of Russian street food!</h2>
    <!-- first element introducting the user -->
    <div class="user-feature-card-user">
      <div class="avatar-large" style="background-image: url('https://images.unsplash.com/photo-1541943181603-d8fe267a5dcf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=912&q=80')"></div>
      <div class="">
        <h5>Samantha Hausmann</h5>
        <p class="mt-2">Samantha has been to more restaurants serving Russian Food than just about anyone.</p>
      </div>
    </div>
    <!-- Image covering the full 2 row grid-->
    <div class="user-feature-card-image-half-height">
      <img class="image-rounded-corners user-feature-card-image-half-height span-1-2" src="https://images.unsplash.com/photo-1511690656952-34342bb7c2f2?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1000&q=80" alt="">
    </div>
    <!-- second element containing a recommendation -->
    <div class="user-feature-card-review">
      <h5 class="">Samantha's recommendation:</h5>
      <h5 class="mt-2">Datcha in Berlin for authentic Russian food</h5>
      <p class="mt-2">The food at this place is just like in Moscow – in Berlin that is.</p>
    </div>
  </div>
</div>
