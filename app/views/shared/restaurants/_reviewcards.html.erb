<% @reviews.where(recommended: true).each do |selection| %>
  <div class="review-card">
    <div class="review-card-avatar">
      <%= cl_image_tag selection.user.photo, class: "avatar-large" %>
    </div>
    <div class="core-review">
      <h5 class='my-1'> <%= selection.user.name %> </h5>
      <p class='my-1'> <%= selection.review %> </p>
      <div class="bottom-line">
        <p class="small-font mt-1"> Posted on <%= selection.updated_at.strftime('%a %d %b %Y') %></p>
        <p id="navbarDropdown", data-toggle="dropdown">
          <svg width="21" height="12" class="svg-dropdown" viewBox="0 0 21 12" xmlns="http://www.w3.org/2000/svg"><path d="M9.16705 10.8084C9.92613 11.487 11.0739 11.487 11.8329 10.8084L20.0182 3.49106C21.3872 2.26724 20.5215 0 18.6853 0H2.3147C0.478447 0 -0.387221 2.26724 0.981759 3.49106L9.16705 10.8084Z"/>
        </p>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Edit", '#', class: "dropdown-item" %>
          <%= link_to "Delete", '#', class: "dropdown-item" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
