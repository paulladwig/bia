<% selection = Selection.find_by(user: current_user, restaurant: restaurant) %>
<% bookmarked = selection.bookmarked if !selection.nil?%>

<div data-restaurant-id="<%= restaurant.id %>">
  <%= button_to(restaurant_selections_path(restaurant, bookmark_round: true), action: "create", remote: true, class: "round-bookmark biabutton-round#{" biabutton-round-active" if bookmarked} font-size-awesome text-center") do %>
    <i class='fas fa-bookmark'></i>
  <% end %>
</div>
