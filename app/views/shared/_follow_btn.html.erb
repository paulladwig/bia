<% if current_user != user %>
  <% if friendship %>
    <% if friendship.active == 1 %>
      <%= link_to 'Unfollow' , update_follow_path(friendship, active: 0), method: :patch, remote: true, id: "", class: "biabutton-full-width-center follow-button-unfollow width-100-pc" %>
    <% else %>
      <%= link_to 'Follow' , update_follow_path(friendship, active: 1), method: :patch, remote: true, class: "biabutton-full-width-center follow-button-follow width-100-pc" %>
    <% end %>
  <% else %>
    <%= link_to 'Follow' , follow_path(user), method: :post, remote: true, class: "biabutton-full-width-center follow-button-follow width-100-pc" %>
  <% end %>
<% else %>
  <%= link_to 'Add Friends', users_path, class: "biabutton-full-width-center follow-button-unfollow width-100-pc" %>
<% end %>
