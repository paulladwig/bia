<% if selection.recommended? %>
  <div class="discover-activity-card">

    <%= cl_image_tag selection.user.photo, class: "avatar-large" %>
    <div class="activity-content">
      <h5> <%= link_to selection.user.name, root_path  %> recommended <%= link_to selection.restaurant.name, restaurant_path(selection.restaurant)  %></h5>
      <p class="my-2"> <%= selection.review %> </p>
      <%= render 'shared/card', restaurant: selection.restaurant %>
      <p class="small-font mt-3"> Posted on <%= selection.created_at.strftime('%a %d %b %Y') %></p>
    </div>
  </div>

<% elsif selection.bookmarked? %>
  <div class="discover-activity-card">
    <%= cl_image_tag selection.user.photo, class: "avatar-large" %>
    <div class="activity-content">
      <h5 class="mb-2"> <%= link_to selection.user.name, root_path  %> has bookmarked <%= link_to selection.restaurant.name, restaurant_path(selection.restaurant)  %></h5>
      <%= render 'shared/card', restaurant: selection.restaurant %>
      <p class="small-font mt-3"> Bookemarked on <%= selection.created_at.strftime('%a %d %b %Y') %></p>
    </div>
  </div>
<% end %>
