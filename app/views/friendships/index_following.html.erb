<% content_for :meta_title, "BIA - Following" %>
<%= render 'shared/navbar' %>
<div class="container-bia mt-5">
  <div class="index-restaurants-layout">
    <h2><%= @user.name %></h2>
    <h2>Following</h2>
    <% user_friendship = Friendship.find_by(asker: current_user, receiver: @user) %>
    <%= render 'shared/users/profile_info', user: @user, friendship: user_friendship%>
    <div class="test">
      <% @friendships.each do |friendship| %>
          <%= render 'shared/friendships/card', user: friendship.receiver, friendship: friendship, show_mutual: true, small: true %>
      <% end %>
      <%= render 'shared/pageinator', elements: @friendships, current_page: @current_page, total_pages: @total_pages  %>
    </div>
  </div>
</div>
