<%= render 'shared/navbar' %>

<div class="container-bia mt-5">
  <div class="page-title-1-2">
    <h2>Hello, <%= current_user.name %></h2>
    <h2>Timeline</h2>
  </div>
  <div class="index-selections-layout mt-4">
    <div class="side-filter">
      <%= simple_form_for :search, url: discover_path, method: "GET", html: { class: 'form-remove-b-margin' } do |f| %>
          <h5 class="mb-2">Location</h5>
          <%=f.input :location, required: false, label: false, input_html: {class: 'input-field simple_form-align mb-2 multiselectuser' }%>
          <h5 class="mb-2">Timeline set-up</h5>
          <%=f.input :cuisine, as: :select, collection: ["All results", "Recommended restaurants", "Bookmarked restaurants", "Friendships"], required: false, label: false, input_html: {data: {width: '345px', style: "btn-light"},class: 'simple_form-align mb-2 selectpicker', multiple: "", title:"All results"}%>
        <%=f.submit "Search", class: "hide" %>
      <% end %>

      <h5 class ="mt-2">Quick Actions</h5>
      <button class="quick-action block" id="open-share-modal">Places you recommended </button>
      <button class="quick-action block">Places you saved </button>
      <button class="quick-action block">Nearby recommended places </button>

    </div>
    <div class="index-selection-show">
      <% @selections.each do |selection| %>
        <%= render 'shared/discover_elements_selections', selection: selection %>
      <% end %>
      <% current_user.friendships_as_receiver.each do |friendship| %>
        <%= render 'shared/discover_elements_friendships', friendship: friendship %>
      <% end %>
    </div>
  </div>
</div>
