<h3 class="mb-3">Recommend <%= restaurant.name %> to your friends</h3>
<%= simple_form_for([restaurant, selection]) do |f| %>
  <%= f.input :review %>
  <%= f.input :occasion %>
  <%= f.input :price %>
  <%= f.input :special %>
  <%= f.hidden_field :recommendation, value: true %>
  <%= f.button :submit, "Post your review", class: 'bia-button-highlight' %>
<% end %>


