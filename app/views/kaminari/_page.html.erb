<% if page.current? %>
  <li class="page-item-bia active-bia">
    <%= content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link-bia' %>
  </li>
<% else %>
  <li class="page-item-bia">
    <%= link_to page, url, remote: remote, rel: page.rel, class: 'page-link-bia' %>
  </li>
<% end %>
